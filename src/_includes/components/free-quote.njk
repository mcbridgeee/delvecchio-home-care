<!-- Free Quote Section Component -->
<section id="free-quote">
  <div class="container">
    <div class="text-center" style="margin-bottom: 2rem">
      <h2 style="font-size: var(--text-xl); line-height: 1.4">
        Get Your Free Quote Today
      </h2>
      <p style="margin-top: 1rem; font-size: 1.1rem; opacity: 0.9">
        Ready to start your project or need a quick repair? Give us a call or
        fill out the quick form below
      </p>
    </div>

    <div class="quote-grid">
      <!-- Left: Contact Info -->
      <div class="contact-info-card">
        <h3 style="color: white; margin-bottom: 1.5rem">Contact Information</h3>

        <div class="contact-item">
          <span class="material-symbols-outlined contact-icon">call</span>
          <div>
            <div style="font-size: 0.9rem; opacity: 0.9">Call or Text</div>
            <div style="font-weight: 700; font-size: 1.1rem">
              (732) 535-2715
            </div>
          </div>
        </div>

        <div class="contact-item">
          <span class="material-symbols-outlined contact-icon">mail</span>
          <div>
            <div style="font-size: 0.9rem; opacity: 0.9">Email</div>
            <div style="font-weight: 600">nick@delvecchiohomecare.com</div>
          </div>
        </div>

        <div class="contact-item">
          <span class="material-symbols-outlined contact-icon"
            >location_on</span
          >
          <div>
            <div style="font-size: 0.9rem; opacity: 0.9">Serving</div>
            <div style="font-weight: 600">
              Bound Brook, Somerset County & Beyond
            </div>
          </div>
        </div>

        <div class="emergency-note">
          "Need it done today? We offer emergency handyman services for urgent
          repairs."
        </div>
      </div>

      <!-- Right: Form -->
      <form
        class="quote-form"
        action="https://formspree.io/f/mldqvobr"
        method="POST"
      >
        <label for="name">Name *</label>
        <input
          type="text"
          id="name"
          name="name"
          placeholder="Your name"
          required
        />

        <label for="phone">Phone *</label>
        <input
          type="tel"
          id="phone"
          name="phone"
          placeholder="(555) 123-4567"
          required
        />

        <label for="email">Email</label>
        <input
          type="email"
          id="email"
          name="email"
          placeholder="your@email.com"
        />

        <label for="message">What do you need help with? *</label>
        <textarea
          id="message"
          name="message"
          rows="4"
          placeholder="Describe your project or repair..."
          required
        ></textarea>

        <button
          type="submit"
          class="btn"
          style="width: 100%; border: none; margin-top: 1rem"
        >
          Get My Free Quote
        </button>
        <p
          style="
            font-size: 0.75rem;
            text-align: center;
            margin-top: 1rem;
            color: #666;
          "
        >
          We respect your privacy. Your information will never be shared.
        </p>
      </form>
    </div>
  </div>
</section>
